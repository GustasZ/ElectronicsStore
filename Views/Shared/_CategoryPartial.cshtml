        <div class="container">
            <div class="arrow justify-content-center">
                <div class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    @foreach (var item in Model)
                    {
                        {
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light btn-dark" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">@item.TopCategory.Name</a>
                                <div class="dropdown-menu dropdown-multicol" aria-labelledby="navbarDropdown">
                                        @foreach (var subCategory in item.SubCategories)
                                        {
                                            @if (subCategory.ParentId == item.TopCategory.Id)
                                            {
                                        <div class="dropdown-row">
                                            <a class="dropdown-item fw-bold" asp-action="ItemByCategoryList" asp-controller="Shop" asp-route-id="@subCategory.Id">@subCategory.Name</a>
                                            @foreach (var subSubCategory in item.SubSubCategories)
                                            {
                                                @if (subSubCategory.ParentId == subCategory.Id)
                                                {
                                                    <a class="dropdown-item" asp-action="ItemByCategoryList" asp-controller="Shop" asp-route-id="@subSubCategory.Id">@subSubCategory.Name</a>
                                                }
                                            }
                                        </div>
                                                    }
                                                    
                                                    }
                                            </div>
                            </div>
                        }
                    }

