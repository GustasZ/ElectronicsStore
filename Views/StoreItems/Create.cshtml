@model ElectronicsStore.Models.StoreItemViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StoreItem</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreItem.ProductCode" class="control-label"></label>
                <input asp-for="StoreItem.ProductCode" class="form-control" />
                <span asp-validation-for="StoreItem.ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Name" class="control-label"></label>
                <input asp-for="StoreItem.Name" class="form-control" />
                <span asp-validation-for="StoreItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Description" class="control-label"></label>
                <input asp-for="StoreItem.Description" class="form-control" />
                <span asp-validation-for="StoreItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.MoreItemInfo" class="control-label"></label>
                <div class="moreInformation">
                </div>
                <span asp-validation-for="StoreItem.MoreItemInfo" class="text-danger"></span>
            <input type="button" value = "Add Column" id="btnAdd"/>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.WarrantyInMonths" class="control-label"></label>
                <input asp-for="StoreItem.WarrantyInMonths" class="form-control" />
                <span asp-validation-for="StoreItem.WarrantyInMonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.AvailableQuantity" class="control-label"></label>
                <input asp-for="StoreItem.AvailableQuantity" class="form-control" />
                <span asp-validation-for="StoreItem.AvailableQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Price" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="StoreItem.Price" class="form-control" />
                    <div class="input-group-text input-group-append">€ cents</div>
                </div>
                <span asp-validation-for="StoreItem.Price" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                      <label asp-for="StoreItem.Category" class="control-label"></label>
            <select asp-for="StoreItem.Category.Id" asp-items="Model.Categories" class="form-control">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="StoreItem.Category" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="StoreItem.Category" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedCategory, Model.Categories, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedCategory, "", new { @class = "text-danger" })
            </div>
                <div class="form-group">
                    <label asp-for="StoreItem.itemLocation" class="control-label"></label>
                    <select asp-for="StoreItem.itemLocation" asp-items="Html.GetEnumSelectList<ItemLocation>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="StoreItem.itemLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <dl>
                        <dt>
                            <label asp-for="FormFile"></label>
                        </dt>
                        <dd>
                            <input asp-for="FormFile" type="file">
                            <span asp-validation-for="FormFile" class="text-danger"></span>
                        </dd>
                    </dl>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
    $(document).ready(function(){
        var size = 0;
        $("#btnAdd").click(function(){
             $(".moreInformation").append("<div class='row'> <input type='text' name='StoreItem.MoreItemInfo["+size+"].Name' class='form-control col' placeholder = 'Name' /> <input type='text' name='StoreItem.MoreItemInfo["+size+"].Text' class='form-control col' placeholder = 'Text' /> </div>");
             size++;
        })
    })
</script>
}
