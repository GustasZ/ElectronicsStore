                    @Html.DisplayFor(modelItem => item.AvailableQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.itemLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
            </tr>
